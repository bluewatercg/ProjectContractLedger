# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=contract_user
DB_PASSWORD=contract_pass
DB_DATABASE=contract_ledger
MYSQL_ROOT_PASSWORD=root123
MYSQL_PORT=3306

# JWT配置
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# TypeORM配置
TYPEORM_SYNCHRONIZE=false
TYPEORM_MIGRATIONS_RUN=true

# 服务端口配置
BACKEND_PORT=8080
FRONTEND_HTTP_PORT=80
FRONTEND_HTTPS_PORT=443
REDIS_PORT=6379

# GitHub Container Registry配置
GITHUB_REPOSITORY=your-username/your-repo
IMAGE_TAG=latest

# 应用配置
NODE_ENV=production

# Redis配置（可选）
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# 文件存储配置（MinIO）
MINIO_ENDPOINT=https://oss.huijg.cn
MINIO_BUCKET=qiji/ProjectContractLedger
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key

# 邮件配置（可选）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=your-email@example.com

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# 安全配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 监控配置
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
