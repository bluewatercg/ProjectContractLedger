# ===========================================
# 开发环境配置模板
# 复制此文件为 .env.local 并填写实际值
# ===========================================

# ===========================================
# 环境标识
# ===========================================
NODE_ENV=local

# ===========================================
# 数据库配置 (开发环境MySQL)
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your-dev-password
DB_DATABASE=contract_ledger_dev
DB_POOL_SIZE=10

# ===========================================
# Redis配置 (开发环境Redis)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# JWT配置
# ===========================================
JWT_SECRET=your-dev-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# ===========================================
# 应用配置
# ===========================================
BACKEND_PORT=8080
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
